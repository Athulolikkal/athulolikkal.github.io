<div class="row">
  <div class="col-md-6 m-auto">
    <div class="container mt-5 pl-5">
      <h2 class="text-center fw-bold">Signup</h2>
     {{#if signError}}
        <p class="text-danger text-center ">invalid signup</p>
       {{else}}
      
       {{/if}}
      
      <form action="/signup" method="post">
        
         <div class="from-group">

          <label class="pt-2">Name</label>
          <input type="name" class="form-control mt-2" name="name" placeholder="please enter the full name">

        </div>
        
        
        
        <div class="from-group">

          <label class="pt-2">Email</label>
          <input type="email" class="form-control" name="email" placeholder="enter the valid email">

        </div>

        <div class="from-group">

          <label>Password</label>
          <input type="password" class="form-control" name="password" placeholder="password">

        </div>

        <a href="/index">already have account?</a>
        <button type="submit" class="btn btn-primary float-right mt-3">signup</button>


      </form>
    </div>
  </div>
</div>






