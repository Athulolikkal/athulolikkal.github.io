<div class="row">
  <div class="col-md-6 m-auto">
    <div class="container mt-5 pl-5">
      <h2 class="text-center fw-bold">Login</h2>
     
      {{#if error}}
        <p class="text-danger text-center ">invalid password or email</p>
       {{else}}
      
       {{/if}}

      <form action="/index" method="post">
        <div class="from-group">

          <label>Email</label>
          <input type="email" class="form-control mt-2" name="email" placeholder="enter the valid email" required="">

        </div>

        <div class="from-group ">

          <label class="mt-2">Password</label>
          <input type="password" class="form-control mt-2" name="password" placeholder="password" required="">

        </div>

        <a href="/signup">Create an new account?</a>
        <button type="submit" class="btn btn-primary float-right mt-3">Login</button>


      </form>
    </div>
  </div>
</div>






