<table class="table" id="table_id">
  <thead>
    <tr>
     
      <th scope="col">Name</th>
      <th scope="col">email</th>
      <th scope="col">options</th>
      
    </tr>
  </thead>
  <tbody>
    {{#each response}}
    <tr>
      
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      
      <td>

        <a href="/admin/edituser/{{this._id}}" class="btn btn-warning ">edit</a>

        <a href="/admin/deleteuser/{{this._id}}"  onclick="retrun alert('are you sure?')"
          class="btn btn-danger">remove</a>

      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<a href="/admin/home" class="btn btn-primary mt-3">Home</a>
<a href="/admin/insertuser" class="btn btn-success mt-3">Insert User</a>

{{!-- datatables --}}
<script>
  $(document).ready( function () {
    $('#table_id').DataTable();
} );
</script>