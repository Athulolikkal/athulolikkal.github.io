<section class="h-50" style="background-color:">
  <div class="container h-100 py-5 p-5 mt-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        </div> 

       {{#each products}}
         <div class="card rounded-3 mb-4 mt-3">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2">
                <img
                  src="{{this.productDetails.image.[0]}}"
                  class="img-fluid rounded-3" alt="">
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2">{{this.productDetails.name}}</p>
                <p><span class="text-muted">Category: </span>{{this.productDetails.category}} </p>
              </div>
              <div class="col-md-3 col-lg-3 col-xl-2 d-flex"> 
                 

             <p>quantity<span><input id="form1" min="0" name="quantity" value="{{this.quantity}}"  type="text"
                  class="form-control form-control-sm" /> </span> </p> 

                 
               </div>
              <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
               {{!-- <h5 class="mb-0">{{this.productDetails.price}}</h5> --}}
              <p><span class="text-muted">per product: </span>{{this.productDetails.price}} </p>
             
              </div>
             
             <div class="col-md-1 col-lg-1 col-xl-1text-end">
              
              </div>
             
              <div class="col-md-1 col-lg-1 col-xl-1text-end">
            
              </div>
            </div>
          </div>
        </div> 
 
       {{/each}}  

      </div>
    </div>
  </div>
</section>
